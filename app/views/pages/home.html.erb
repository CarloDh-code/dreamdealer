<%# <div class="mainbackground"> %>
  <div class="d-flex flex-column">
    <div class="hero position-relative text-white text-center d-flex align-items-center" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/assets/images/background2.png');">
      <div class="container">
        <br>
        <br>
        <h1 class="titlebig mb-5 animate-text">Don't dream your life,</h1>
        <h1 class="titlebig2 mb-5 animate-text"> live your dreams</h1>
        <p class="lead"> Each of your nights is an opportunity to dream: choose the dreams you want to have!</p>
        <p class="lead"> Each of your dreams is a creation: share them on DreamDealer!</p>
        <%= link_to "Explore our dreams", dreams_path, class: "btn btn-light btn-lg rounded-pill px-4 shadow-sm m-5" %>
        <%= link_to "Share your dreams", new_dream_path, class: "btn btn-light btn-lg rounded-pill px-4 shadow-sm m-5" %>
        <br>
        <br>


        <div class="row my-5">
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow border-0" style="background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(240, 240, 255, 0.3)); backdrop-filter: blur(10px); border-radius: 20px;">
              <div class="card-body text-center">
                <i class="fas fa-cloud-moon fa-3x text-primary mb-3"></i>
                <h5 class="card-title fw-bold">Personalized Dreams</h5>
                <p class="card-text text-muted">Choose from unique experiences tailored to your desires.</p>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow border-0" style="background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(240, 240, 255, 0.3)); backdrop-filter: blur(10px); border-radius: 20px;">
              <div class="card-body text-center">
                <i class="fas fa-star fa-3x text-warning mb-3"></i>
                <h5 class="card-title fw-bold">Dream with your beloved</h5>
                <p class="card-text text-muted">Share your dreams and share your adventures with your friends.</p>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow border-0" style="background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(240, 240, 255, 0.3)); backdrop-filter: blur(10px); border-radius: 20px;">
              <div class="card-body text-center">
                <i class="fas fa-dove fa-3x text-success mb-3"></i>
                <h5 class="card-title fw-bold">Global Discoveries</h5>
                <p class="card-text text-muted">Access dreams from all corners of the world.</p>
              </div>
            </div>
          </div>
        </div>


        <div>
          <div class="container mb-5">

            <%= link_to "Become a dreamer now", new_dream_path, class: "btn btn-light btn-lg rounded-pill px-4 shadow-sm m-5" %>
          </div>
          <br>
          <br>
          <br>
          <br>
        </div>



    </div>
  </div>
<%# </div> %>
