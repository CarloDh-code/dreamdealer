<div class="container py-4 d-flex justify-content-center align-items-center">
  <div class="w-100">
  <h4 class="text-center mb-5">How was your dream?</h5>
    <%= simple_form_for([dream, review]) do |f| %>
      <div class="mb-3">
        <%= f.input :comment,
          label: "Comment",
          input_html: { class: 'form-control' },
          label_html: { class: 'form-label' } %>
      </div>
      <div class="mb-3">
        <%= f.input :rating,
          collection: @ratings,
          input_html: { class: 'form-select', data: { controller: "tom-select" } },
          label: 'Give your rating',
          label_html: { class: 'form-label' } %>
      </div>
      <div class="d-flex justify-content-center">
        <%= f.submit "Post your review", class: "btn btn-info fw-bold" %>
      </div>
    <% end %>
  </div>
</div>
