<%= simple_form_for(dream) do |f| %>
  <%= f.input :title, placeholder: "What did you dream of..." %>
  <%= f.input :description, placeholder: "Tell us more about your dream..." %>
  <%= f.input :category, placeholder: "Select a dream type", input_html: {data: {controller: "tom-select"}} %>
  <%= f.input :price_per_night, placeholder: "Set your price" %>
  <%= f.input :age_limit, placeholder: "Age limit" %>
  <%= f.input :number_of_roles, placeholder: "How many characters you want"%>
  <%= f.input :photo, as: :file, placeholder: "Insert a mental pictyure pf your dream"%>
  <%= f.submit class: "btn btn-flat" %>
<% end %>
