<div class="container mt-5">
  <div class="bg-gradient rounded-4 p-3 row align-items-start shadow">

    <!-- Left Column: Image/Carousel -->
    <div class="col-md-4 text-center">
      <% if @dream.photos.empty? %>
        <%= image_tag 'dreamdefault.png', class: 'card-img-top', alt: @dream.title %>
      <% else %>
        <div id="carouselExampleIndicators-<%= @dream.id %>" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <% @dream.photos.each_with_index do |photo, index| %>
              <li data-bs-target="#carouselExampleIndicators-<%= @dream.id %>"
                  data-bs-slide-to="<%= index %>"
                  class="<%= 'active' if index == 0 %>">
              </li>
            <% end %>
          </div>

          <div class="carousel-inner">
            <% @dream.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= cl_image_tag photo.key, crop: :fill, class: 'd-block w-100 card-img-top', alt: @dream.title %>
              </div>
            <% end %>
          </div>

          <!-- Carousel Controls -->
          <a class="carousel-control-prev" href="#carouselExampleIndicators-<%= @dream.id %>" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators-<%= @dream.id %>" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <% end %>
      <p class="mt-3 text-muted">Hosted by: <strong><%= @dream.user.nickname %></strong></p>
    </div>

    <!-- Center Column: Dream Details -->
    <div class="col-md-6 d-flex flex-column justify-content-start">
      <h1 class="mb-3"><%= @dream.title %></h1>
      <h5 class="text-muted mb-2"><strong>Details of your next dream:</strong></h5>
      <p class="text-muted"><%= @dream.description %></p>
      <p class="mb-1"><strong>Category:</strong> <%= @dream.category %></p>
      <p class="mb-1"><strong>Price per night:</strong> <%= @dream.price_per_night %>Â£</p>
      <p class="mb-1"><strong>Number of roles:</strong> <%= @dream.number_of_roles %></p>
    </div>

    <!-- Right Column: Rating -->
    <div class="col-md-2 text-center">
      <p class="display-6 fw-bold">4/5</p>
    </div>

  </div> <!-- End of row -->

  <!-- Booking Form -->
  <div class="d-flex justify-content-center align-items-center m-1 p-3">
    <div class="m-2 bg-light text-dark p-3 rounded-4 shadow">
      <%= render "formbooking", dream: @dream, booking: @booking %>
    </div>
  </div>

  <!-- Back to Dreams Button -->
  <div class="text-center m-4">
    <%= link_to "Back to the Dreams", dreams_path, class: "btn btn-primary" %>
  </div>
</div>
