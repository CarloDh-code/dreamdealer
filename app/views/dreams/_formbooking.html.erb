<%= simple_form_for([dream, booking], html: { class: "form-inline" }) do |f| %>
<h4 class="text-center">Book your dream</h3>
  <div class="form-group">
    <%= f.label :start_date, class: "form-label" %>
    <%= f.input :start_date,
      as: :string,
      input_html: { class: "form-control", data: { controller: "datepicker" } },
      label: false
    %>
  </div>
  <div class="form-group">
    <%= f.label :end_date, class: "form-label" %>
    <%= f.input :end_date,
      as: :string,
      input_html: { class: "form-control", data: { controller: "datepicker" } },
      label: false
    %>
  </div>
  <div class="form-group text-center">
    <%= f.submit "Book it now", class: "btn btn-info text-white" %>
  </div>
<% end %>
